<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:widtools="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/videoImg1"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/video1"
        android:layout_margin="5dp"
        widtools:layout_constraintStart_toStartOf="@+id/videoRecycler"
        widtools:layout_constraintTop_toTopOf="@+id/videoRecycler" />
    <ImageView
        android:id="@+id/videoImg2"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/video2"
        widtools:layout_constraintEnd_toEndOf="@+id/videoRecycler"
        widtools:layout_constraintTop_toTopOf="@+id/videoRecycler" />
</androidx.constraintlayout.widget.ConstraintLayout>