<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/lilvpfragmentimg1"
        android:layout_width="102dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="102dp"/>
    <TextView
        android:id="@+id/lilvpfragmenttext1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmentimg1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg1"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="Luv(sic) Hexalogy"/>
    <TextView
        android:id="@+id/lilvpfragmenttext1.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg1"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg1"
        android:maxLines="1"
        android:textSize="10dp"
        android:textColor="#8F8F8F"
        android:text="Nujabes / Shing02"/>
    <ImageView
        android:id="@+id/lilvpfragmentimg2"
        android:layout_width="102dp"
        app:layout_constraintLeft_toRightOf="@id/lilvpfragmentimg1"
        app:layout_constraintRight_toLeftOf="@id/lilvpfragmentimg3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="102dp"/>
    <TextView
        android:id="@+id/lilvpfragmenttext2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmentimg1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg2"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg2"
        android:textColor="@color/black"
        android:text="In A Time Lapse (Deluxe Edition)"/>
    <TextView
        android:id="@+id/lilvpfragmenttext2.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext2"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg2"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg2"
        android:maxLines="1"
        android:textColor="#8F8F8F"
        android:text="Ludovico Einaudi"/>
    <ImageView
        android:id="@+id/lilvpfragmentimg3"
        android:layout_width="102dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="102dp"/>
    <TextView
        android:id="@+id/lilvpfragmenttext3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmentimg1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg3"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg3"
        android:textColor="@color/black"
        android:maxLines="1"
        android:text="Storytone"/>
    <TextView
        android:id="@+id/lilvpfragmenttext3.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext2"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg3"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg3"
        android:maxLines="1"
        android:textColor="#8F8F8F"
        android:text="Neil Young"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/lilvpfragmenttext4.1"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext3.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg1"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg1"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="26dp"
        android:backgroundTint="#00cc00"
        android:background="#00cc00"
        app:cardCornerRadius="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="立即支持"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/lilvpfragmenttext4.2"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext3.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg2"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg2"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="26dp"
        android:backgroundTint="#00cc00"
        android:background="#00cc00"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="立即支持"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/lilvpfragmenttext4.3"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext3.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg3"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg3"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="26dp"
        android:backgroundTint="#00cc00"
        android:background="#00cc00"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="立即支持"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lilvpfragmenttext5.1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext4.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg1"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg1"
        android:backgroundTint="#00cc00"
        android:maxLines="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:text="已售 97.1 万张"/>
    <TextView
        android:id="@+id/lilvpfragmenttext5.2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext4.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg2"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg2"
        android:backgroundTint="#00cc00"
        android:maxLines="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:text="已售 198.9 万张"/>
    <TextView
        android:id="@+id/lilvpfragmenttext5.3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/lilvpfragmenttext4.1"
        app:layout_constraintLeft_toLeftOf="@id/lilvpfragmentimg3"
        app:layout_constraintRight_toRightOf="@id/lilvpfragmentimg3"
        android:backgroundTint="#00cc00"
        android:maxLines="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="已售 68.7 万张"/>
</androidx.constraintlayout.widget.ConstraintLayout>