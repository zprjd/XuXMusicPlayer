<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <VideoView
        android:id="@+id/video_item_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/play_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/video_item_player"
        app:layout_constraintEnd_toEndOf="@+id/video_item_player"
        app:layout_constraintStart_toStartOf="@+id/video_item_player"
        app:layout_constraintTop_toTopOf="@+id/video_item_player" />android:src="@drawable/play_arrow"

    <ImageView
        android:id="@+id/videoItemThumbup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/thumbup"/>
    <ImageView
        android:id="@+id/videoItemComment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoItemThumbup"
        android:layout_marginTop="39dp"
        android:background="@drawable/comment"/>
    <ImageView
        android:id="@+id/videoItemShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoItemComment"
        android:layout_marginTop="39dp"
        android:background="@drawable/share"/>
    <TextView
        android:id="@+id/videoItemShareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:layout_marginTop="5dp"
        android:textColor="#DEDEDE"
        android:textSize="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/videoItemShare"
        app:layout_constraintStart_toStartOf="@+id/videoItemShare"
        app:layout_constraintTop_toBottomOf="@+id/videoItemShare" />
    <TextView
        android:id="@+id/videoItemCommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 24 "
        android:layout_marginTop="5dp"
        android:textColor="#DEDEDE"
        android:textSize="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/videoItemComment"
        app:layout_constraintStart_toStartOf="@+id/videoItemComment"
        app:layout_constraintTop_toBottomOf="@+id/videoItemComment"/>
    <TextView
        android:id="@+id/videoItemThumbupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="709"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:gravity="center"
        android:textColor="#DEDEDE"
        app:layout_constraintEnd_toEndOf="@+id/videoItemThumbup"
        app:layout_constraintStart_toStartOf="@+id/videoItemThumbup"
        app:layout_constraintTop_toBottomOf="@+id/videoItemThumbup"/>
</androidx.constraintlayout.widget.ConstraintLayout>