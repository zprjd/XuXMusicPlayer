<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/lilviewpagerimg1"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_margin="20dp"
    android:scaleType="centerCrop"
    tools:ignore="MissingConstraints" />
<TextView
    android:id="@+id/lilviewpagertext1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16dp"
    android:text="1111"
    android:layout_margin="10dp"
    android:textColor="@color/black"
    app:layout_constraintLeft_toRightOf="@id/lilviewpagerimg1"
    app:layout_constraintTop_toTopOf="@id/lilviewpagerimg1"
    android:layout_marginTop="15dp"
    tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lilviewpagertext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="111111"
        android:textColor="#8F8F8F"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/lilviewpagerimg1"
        app:layout_constraintStart_toStartOf="@+id/lilviewpagertext1"
        app:layout_constraintTop_toBottomOf="@id/lilviewpagertext1" />
</androidx.constraintlayout.widget.ConstraintLayout>